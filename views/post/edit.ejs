<%- include('../partials/header') -%>

<div>
  <h1>Edit your post</h1>
  <form action="/post/<%= postId %>?_method=PUT" method="POST">
    <div class="form-group">
      <label> Title </label>
      <input
        class="form-control"
        type="text"
        placeholder="title"
        name="title"
        value="<%= postTitle %>"
      />
      <label> Description </label>
      <textarea class="form-control" name="description" cols="30" rows="10">
<%= postDescription %></textarea
      >
      <label> Price </label>
      <input
        class="form-control"
        type="text"
        placeholder="price"
        name="price"
        value="<%= postPrice %>"
      />
      <label> Location </label>
      <input
        class="form-control"
        type="text"
        placeholder="location"
        name="location"
        value="<%= location %>"
      />
      <button class="btn btn-primary" type="submit" name="edit">Edit</button>
    </div>
  </form>
</div>

<%- include('../partials/footer') -%>
