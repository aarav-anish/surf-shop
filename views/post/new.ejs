<%- include('../partials/header') -%>

<div>
  <h1>Write a new post</h1>
  <form method="POST" action="/post" enctype="multipart/form-data">
    <div class="form-group">
      <label> Title </label>
      <input
        class="form-control"
        type="text"
        placeholder="title"
        name="title"
        required
      />
      <label> Description </label>
      <textarea
        class="form-control"
        name="description"
        cols="30"
        rows="10"
        required
      ></textarea>
      <label>Images</label>
      <input
        class="form-control"
        type="file"
        accept="images/*"
        name="images"
        multiple
      />
      <label> Price </label>
      <input
        class="form-control"
        type="text"
        placeholder="price"
        name="price"
        required
      />
      <label> Location </label>
      <input
        class="form-control"
        type="text"
        placeholder="location"
        name="location"
        required
      />
      <button class="btn btn-primary" type="submit" name="publish">
        Publish
      </button>
    </div>
  </form>
</div>

<%- include('../partials/footer') -%>
