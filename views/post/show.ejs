<%- include("../partials/header") -%>

<h1 class="heading"><%= postTitle %></h1>
<p><%= postDescription %></p>
<p><%= postPrice %></p>
<p><%= location %></p>
<a href="/post/edit/<%= postId %> ">
  <button class="btn btn-dark">Edit</button>
</a>
<form action="/post/<%= postId %>?_method=DELETE" method="POST">
  <button class="btn btn-danger" title="Delete" type="submit">
    <i class="fas fa-2x fa-trash"></i>
  </button>
</form>
<a href="/post/new" title="Compose">
  <i class="fas fa-plus-circle fa-4x compose"></i>
</a>

<%- include("../partials/footer") -%>
